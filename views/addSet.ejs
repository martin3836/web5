<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add LEGO Set</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
<%- include('partials/navbar', {page: '/lego/addSet'}) %>

<div class="container mx-auto p-5">
    <h1 class="text-xl font-bold mb-4">Add New LEGO Set</h1>
    <form action="/lego/addSet" method="POST" class="form-layout">
        <div class="form-group">
            <label for="set_num">Set Number:</label>
            <input type="text" id="set_num" name="set_num" placeholder="Enter set number" required>
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Enter set name" required>
        </div>
        <div class="form-group">
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" placeholder="Enter year" required>
        </div>
        <div class="form-group">
            <label for="num_parts">Number of Parts:</label>
            <input type="number" id="num_parts" name="num_parts" placeholder="Enter number of parts" required>
        </div>
        <div class="form-group">
            <label for="img_url">Image URL:</label>
            <input type="url" id="img_url" name="img_url" placeholder="Enter image URL">
        </div>
        <div class="form-group">
            <label for="theme_id">Theme:</label>
            <select id="theme_id" name="theme_id" required>
                <% themes.forEach(theme => { %>
                    <option value="<%= theme.id %>"><%= theme.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="flex mt-4">
            <button type="submit" class="btn btn-primary mr-2">Add Set</button>
            <a href="/lego/sets" class="btn btn-secondary">Back to Sets</a> <!-- Change the href to wherever you want to navigate back -->
        </div>
    </form>
</div>

</body>
</html>
